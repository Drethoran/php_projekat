{% extends 'base.html.twig' %}

{% block title %}Artikli{% endblock %}

{% block body %}
<div class="navigation">
    <ul class="nav nav-pills justify-content-center">
        <li class="nav-item">
          <a class="nav-link active" href="{{ path('artikli') }}">Artikli</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('racun') }}">Izdavanje novog računa</a>
        </li>
</div>

<form style="padding-left:40%; padding-right:40%; padding-top:50px">
  <div class="form-group">
    <label for="proizvod">Naziv proizvoda</label>
    <input type="email" class="form-control" id="proizvod" placeholder="Proizvod...">
  </div>
  <div class="form-group">
    <label for="pdv">Stopa PDV</label>
    <select class="form-control" id="pdv">
      <option value="" disabled selected>Izaberite</option>
      <option>10%</option>
      <option>20%</option>
    </select>
  </div>
  <div class="form-group">
    <label for="cena">Prodajna Cena</label>
    <input type="email" class="form-control" id="cena" placeholder="Cena...">
    <select class="form-control" id="valuta">
      <option value="" disabled selected>Valuta...</option>
      <option>RSD</option>
    </select>
  </div>
  <div class="form-group">
    <label for="opis">Opis proizvoda</label>
    <textarea class="form-control" id="opis" rows="3" placeholder="Opis..."></textarea>
  </div>
  <input class="btn btn-primary" type="submit" value="Sačuvaj">
</form>
{% endblock %}
